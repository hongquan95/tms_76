<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "", root_path, class: "glyphicon glyphicon-home" %></li>
        <li><%= link_to "", help_path, class: "glyphicon glyphicon-question-sign" %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", data: { toggle: "dropdown"} do %>
              <%= gravatar_for current_user, size: Settings.avatar_sm %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li>
                <%= link_to current_user.name, current_user,
                  class: "glyphicon glyphicon-user" %>
              </li>
              <li>
                <%= link_to t(".edit"), edit_user_path(current_user),
                  class: "glyphicon glyphicon-edit" %>
              </li>
              <li>
                <%= link_to t(".logout"), logout_path, method: :delete,
                  class: "glyphicon glyphicon-log-out" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to t(".content_link_Login"), login_path,
              class: "glyphicon glyphicon-log-in" %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
