<%= form_for [@user_course, @users] do |f| %>
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-9">
        <%= f.hidden_field :user_course_id, value: @user_course.id %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= f.collection_check_boxes :user_ids, @users, :id, :email do |b| %>
          <span>
            <%= b.label do %>
              <%= b.check_box %>&nbsp;
              <%= b.text %>&nbsp;
            <% end %>
          </span>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.submit t("form.buttons.save"),
          class: "btn btn-primary text-right" %>
      </div>
    </div>

  </div>
<% end %>
